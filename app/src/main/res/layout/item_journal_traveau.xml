<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="JournalBinding">
            <variable
                name="journalmodel"
                type="com.example.talan_app.view_model.JournalVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:strokeColor="#AAA8A8"
            app:strokeWidth="0.25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

               >
                <TextView
                    android:id="@+id/journal"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="N journal :"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/codejournal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{journalmodel.n_journal}"
                    android:paddingTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/mlight"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/journal"/>


            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:id="@+id/DATEjournal"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="DATE : "
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/mmedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/codeDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{journalmodel.datajournal}"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mlight"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/DATEjournal"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:id="@+id/TYPEjournal"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="TYPE :"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/mmedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/codeTYPE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{journalmodel.typejournal}"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mlight"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/TYPEjournal"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <TextView
                        android:id="@+id/creejournal"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Créé par :"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/mmedium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/codecree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{journalmodel.creejournal}"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mlight"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/creejournal"/>


                </RelativeLayout>



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>