<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/My_background"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PiÃ¨ce Jointe"
                android:background="#EDE9E9"
                android:layout_margin="3dp"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclePieceJoint"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@+id/addcompteur"
                android:clipToPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                tools:listitem="@layout/item_piece_joint"
                />

            <Button
                android:id="@+id/btnPiecejoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ok"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/msemibold"
                android:layout_margin="15dp"
                app:backgroundTint="@color/bleu_btn"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>