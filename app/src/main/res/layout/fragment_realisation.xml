<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/My_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".intervention.detail_intervention.RealisationFragment">
    <Button
        android:id="@+id/addReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main d'oeuvre"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        app:iconSize="18dp"
        app:icon="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/bleu_btn"
        tools:ignore="SmallSp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyleReal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_below="@+id/addReal"
        tools:listitem="@layout/item_realisation"/>

</RelativeLayout>