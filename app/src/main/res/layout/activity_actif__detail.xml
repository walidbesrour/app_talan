<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layoutDescription="@xml/activity_actif__detail_scene"
    tools:context=".detail.Actif_Detail">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/N_actif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/N_actif"
            android:text="Fire Extinguisher "

            />

        <ImageButton
            android:id="@+id/btn_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_image_24" />

        <ImageButton
            android:id="@+id/btn_piece"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_attach_file_24" />


        <TextView
            android:id="@+id/txtstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/N_actif"
            android:layout_marginTop="10dp"
            android:text="Status :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/N_actif"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txtstatus"
            android:text="ACTIVE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_min"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/latout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_min">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_detail_actif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latout_btn"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/tab_1" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/tab_2" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/tab_3" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/tab_4" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="string/tab_5" />

    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_detail_actif" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zesfv_svdv_v_sdw_khbdksdhwxkd_bkhsbdkhbsdkcbqbdiyzqdsiqsihbdwxhbqkbkbdqscbqbcbcbqckbqwcbqbckqwxcbdksbieqs_bdhbqckhbqkxcbxbcieviebdfsdhnckfsbdwxc_kds_wbxckjsdbvizebsf_wxbdghresdlwvzosdwbomuvdmoudbmoudfb_qskdcvqkjfsbdfbkhbdksdhwxkd_bkhsbdkhbsdkcbqbdiyzqdsiqsihbdwxhbqkbkbdqscbqbcbcbqckbqwcbqbckqwxcbdksbieqs_bdhbqckhbqkxcbxbcieviebdfsdhnckfsbdwxc_kds_wbxckjsdbvizebsf_wxbdghresdlwvzosdwbomuvdmoudbmoudfb_qskdcvqkjfsbdfbvueflb_bx_hskdbouevvueflb_bx_hskdbouevsdwcx"
                android:textSize="35sp"
                />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>